create database rafaelgar;

use rafaelgar;


create table usuarios
(
idUsuario smallint not null identity(1,1),
  nombre    varchar(30),
  apPaterno varchar(30),
  apMaterno varchar(30),
  login     varchar(10),
  password  varchar(32),
  PRIMARY KEY(idUsuario)

)
